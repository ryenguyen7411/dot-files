{
  "$schema": "https://opencode.ai/config.json",
  "username": "Rye",
  "theme": "tokyonight",
  "share": "manual",
  "autoupdate": true,
  "instructions": [],
  "keybinds": {
    "input_newline": "ctrl+j"
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp"
    },
    "octocode": {
      "type": "local",
      "command": [
        "npx",
        "octocode-mcp"
      ]
    },
    "playwright": {
      "type": "local",
      "command": [
        "npx",
        "@playwright/mcp@latest"
      ],
      "environment": {}
    },
    "code-reasoning": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@mettamatt/code-reasoning"
      ]
    }
  }
}
