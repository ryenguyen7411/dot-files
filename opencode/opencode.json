{
  "$schema": "https://opencode.ai/config.json",
  "username": "Rye",
  "model": "anthropic/claude-sonnet-4-20250514",
  "theme": "tokyonight",
  "share": "auto",
  "autoupdate": true,
  "mode": {
    "build": {
      "tools": {
        "write": true,
        "edit": true,
        "bash": true
      }
    },
    "plan": {
      "tools": {
        "write": false,
        "edit": false,
        "bash": false
      }
    },
    "commit": {
      "prompt": "{file:./prompts/commit-mode.md}",
      "tools": {
        "write": false,
        "edit": false,
        "bash": true
      }
    },
    "gpt-beast": {
      "model": "github-copilot/gpt-4.1",
      "prompt": "{file:./prompts/gpt-4.1-beast-mode.md}",
      "tools": {
        "write": true,
        "edit": true,
        "bash": true,
        "webfetch": true,
        "todowrite": true,
        "todoread": true
      }
    }
  },
  "keybinds": {
    "input_newline": "ctrl+o,<leader>o",
    "messages_half_page_up": "ctrl+k",
    "messages_half_page_down": "ctrl+j",
    "messages_previous": "ctrl+h",
    "messages_next": "ctrl+l"
  }
}
